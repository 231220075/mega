<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="sourceview" version="5.0" />
  <template class="CodePage" parent="GtkBox">
    <property name="orientation">horizontal</property>
    <property name="hexpand">true</property>
    <property name="vexpand">true</property>

    <!-- Left Side: File Tree -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <!-- <child>
          <object class="GtkSearchBar" id="searchbar">
            <accessibility>
              <relation name="labelled-by">search-entry</relation>
            </accessibility>
            <property name="key-capture-widget">window</property>
            <property name="child">
              <object class="GtkSearchEntry" id="search-entry">
                <accessibility>
                  <property name="label" translatable="yes">Search</property>
                  <relation name="controls">listview</relation>
                </accessibility>
              </object>
            </property>
          </object>
        </child> -->
        <child>
          <object class="GtkScrolledWindow">
            <style>
              <class name="sidebar" />
            </style>
            <property name="hscrollbar-policy">never</property>
            <property name="propagate-natural-width">1</property>
            <property name="vexpand">1</property>
            <property name="child">
              <object class="GtkListView" id="list_view">
                <style>
                  <class name="navigation-sidebar" />
                </style>
                <property name="tab-behavior">item</property>
                <property name="factory">
                  <object class="GtkBuilderListItemFactory">
                    <property name="resource">/org/Web3Infrastructure/Monobean/gtk/file_row.ui</property>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>

    <!-- Test -->
    <child>
      <object class="FileTreeView" id="file_tree_view"/>
    </child>

    <!-- Right Side: Code Viewer  -->
    <child>
      <object class="GtkStack" id="code_stack">
        <property name="transition-type">crossfade</property>
        <property name="hexpand">true</property>
        <property name="vexpand">true</property>

        <!-- Empty page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">empty_view</property>
            <property name="title" translatable="true">Empty View</property>
            <property name="child">
              <object class="GtkBox" id="empty_page">
                <property name="orientation">vertical</property>
                <property name="valign">center</property>
                <property name="halign">center</property>
                <property name="spacing">12</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">text-x-generic-symbolic</property>
                    <property name="pixel-size">64</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">No file selected</property>
                    <style>
                      <class name="title-2" />
                    </style>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>

        <!-- Source view page -->
        <child>
          <object class="GtkStackPage">
            <property name="name">source_view</property>
            <property name="title">Source View</property>
            <property name="child">
              <object class="GtkScrolledWindow" id="source_scroll">
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <child>
                  <object class="GtkSourceView" id="source_view">
                    <property name="monospace">true</property>
                    <property name="show-line-numbers">true</property>
                    <property name="highlight-current-line">true</property>
                    <property name="tab-width">4</property>
                    <property name="auto-indent">true</property>
                    <property name="wrap-mode">word</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
